<%- include('../layouts/header') -%>
<div class="text-center" id="registration">
  <div class="container border py-5">
    <h1 class="font-weight-bold">User Registration</h1>
    <% if (typeof message !== 'undefined') { %>
      <p style="color: green"><%= message %></p>
    <% } %>
    <form action="/register" method="POST" class="pt-3">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" value="<%= formData && formData.name ? formData.name : '' %>">
        <% if (errors && errors.name) { %>
          <small class="text-danger"><%= errors.name %></small>
        <% } %>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" value="<%= formData && formData.email ? formData.email : '' %>">
        <% if (errors && errors.email) { %>
          <small class="text-danger"><%= errors.email %></small>
        <% } %>
      </div>
      <div class="form-group">
        <label for="mobile">Mobile Number</label>
        <input type="text" name="mobile" class="form-control" value="<%= formData && formData.mobile ? formData.mobile : '' %>">
        <% if (errors && errors.mobile) { %>
          <small class="text-danger"><%= errors.mobile %></small>
        <% } %>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control">
        <% if (errors && errors.password) { %>
          <small class="text-danger"><%= errors.password %></small>
        <% } %>
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" class="form-control">
        <% if (errors && errors.confirmPassword) { %>
          <small class="text-danger"><%= errors.confirmPassword %></small>
        <% } %>
      </div>
      <button type="submit" class="btn btn-success rounded-pill mt-3">Submit</button>
      <a href="/" class="btn btn-success rounded-pill mt-3">Login Page</a>
    </form>
  </div>
</div>
<%- include('../layouts/footer') -%>
